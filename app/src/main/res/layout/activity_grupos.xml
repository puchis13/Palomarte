<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextIdGrupo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID del Grupo"
            android:inputType="number" />

        <EditText
            android:id="@+id/editTextNombreGrupo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del Grupo"
            android:inputType="text" />

        <!-- Campo Fecha de Creaci贸n con selector de fecha -->
        <EditText
            android:id="@+id/editTextFechaCreacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha de Creaci贸n"
            android:inputType="none"
            android:focusable="false" />

        <EditText
            android:id="@+id/editTextTotalPalomas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Total de Palomas"
            android:inputType="number" />

        <!-- Campo Clasificaci贸n con RadioButtons -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clasificaci贸n"
            android:layout_marginTop="8dp" />

        <RadioGroup
            android:id="@+id/radioGroupClasificacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioOrdinarias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ordinarias" />

            <RadioButton
                android:id="@+id/radioDerbys"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Derbys" />
        </RadioGroup>

        <!-- Campo Status con RadioButtons -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:layout_marginTop="8dp" />

        <RadioGroup
            android:id="@+id/radioGroupStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioActivo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activo" />

            <RadioButton
                android:id="@+id/radioInactivo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inactivo" />
        </RadioGroup>

        <!-- Botones CRUD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/createButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Crear"
                    android:layout_margin="8dp" />

                <Button
                    android:id="@+id/updateButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Actualizar"
                    android:layout_margin="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/deleteButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eliminar"
                    android:layout_margin="8dp" />

                <Button
                    android:id="@+id/searchButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buscar"
                    android:layout_margin="8dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
