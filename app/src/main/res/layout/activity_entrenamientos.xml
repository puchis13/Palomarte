<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextIdEntrenamiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID del Entrenamiento"
            android:inputType="number" />

        <EditText
            android:id="@+id/editTextGrupoId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID del Grupo"
            android:inputType="number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clasificación del Vuelo"
            android:layout_marginTop="8dp" />

        <RadioGroup
            android:id="@+id/radioGroupClasificacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioOrdinarias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ordinarias" />

            <RadioButton
                android:id="@+id/radioDerbys"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Derbys" />
        </RadioGroup>

        <EditText
            android:id="@+id/editTextFechaEntrenamiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha de Entrenamiento"
            android:focusable="false"
            android:inputType="none" />

        <EditText
            android:id="@+id/editTextUbicacionSuelta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ubicación de la Suelta"
            android:inputType="text" />

        <EditText
            android:id="@+id/editTextKilometrosAproximados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kilómetros Aproximados"
            android:inputType="number" />

        <EditText
            android:id="@+id/editTextHoraSuelta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hora de la Suelta"
            android:focusable="false"
            android:inputType="none" />

        <EditText
            android:id="@+id/editTextHoraLlegada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hora de Llegada"
            android:focusable="false"
            android:inputType="none" />

        <EditText
            android:id="@+id/editTextRanking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ranking"
            android:inputType="number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado"
            android:layout_marginTop="8dp" />

        <RadioGroup
            android:id="@+id/radioGroupStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioCompletado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completado" />

            <RadioButton
                android:id="@+id/radioPendiente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pendiente" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/createButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Crear"
                    android:layout_margin="8dp" />

                <Button
                    android:id="@+id/updateButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Actualizar"
                    android:layout_margin="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/deleteButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eliminar"
                    android:layout_margin="8dp" />

                <Button
                    android:id="@+id/searchButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buscar"
                    android:layout_margin="8dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
