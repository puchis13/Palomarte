<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título de la pantalla -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar Competencia"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Nombre del Club -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del Club">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nombreClubInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Nombre de la Asociación -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de la Asociación">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nombreAsociacionInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Clasificación de Vuelo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clasificación de Vuelo"
            android:layout_marginTop="8dp" />
        <Spinner
            android:id="@+id/clasificacionVueloSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Ubicación de Suelta -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ubicación de Suelta">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ubicacionSueltaInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Kilómetros Aproximados -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kilómetros Aproximados">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/kilometrosInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Fecha de Competencia -->
        <Button
            android:id="@+id/fechaCompetenciaButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionar Fecha" />

        <TextView
            android:id="@+id/fechaCompetenciaTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha no seleccionada"
            android:layout_marginTop="4dp" />

        <!-- Hora de Suelta -->
        <Button
            android:id="@+id/horaSueltaButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionar Hora" />

        <TextView
            android:id="@+id/horaSueltaTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hora no seleccionada"
            android:layout_marginTop="4dp" />

        <!-- Ranking Interno -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ranking Interno">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/rankingInternoInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Ranking General -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ranking General">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/rankingGeneralInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Estado -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estado"
            android:layout_marginTop="8dp" />
        <Spinner
            android:id="@+id/estadoSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Botón para Guardar -->
        <Button
            android:id="@+id/guardarCompetenciaButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Guardar Competencia" />
    </LinearLayout>
</ScrollView>
