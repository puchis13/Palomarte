<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvFechaSintomas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha de Síntomas" />

        <TextView
            android:id="@+id/tvPalomaId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID de la Paloma" />

        <TextView
            android:id="@+id/tvDescripcionEnfermedad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción de la Enfermedad" />

        <TextView
            android:id="@+id/tvMedicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medicacion" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
